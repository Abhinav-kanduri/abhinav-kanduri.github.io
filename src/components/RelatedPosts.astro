---
interface Props {
  currentTags: string[];
}

const { currentTags } = Astro.props;

// In a real implementation, this would fetch related posts from the content collection
// based on matching tags. For now, we're using dummy data.
const relatedPosts = [
  {
    title: 'Building a RAG System with LangChain and FastAPI',
    slug: 'rag-system-langchain-fastapi',
    date: '2023-11-15'
  },
  {
    title: 'Vector Databases: A Practical Comparison',
    slug: 'vector-databases-comparison',
    date: '2023-12-01'
  },
  {
    title: 'Prompt Engineering Techniques for LLMs',
    slug: 'prompt-engineering-llms',
    date: '2024-01-10'
  }
];
---

<ul class="space-y-4">
  {relatedPosts.map(post => (
    <li>
      <a 
        href={`/blog/${post.slug}`}
        class="block hover:bg-gray-100 dark:hover:bg-primary-700 rounded-lg p-2 -mx-2 transition-colors"
      >
        <h4 class="font-medium text-primary-900 dark:text-white hover:text-accent-600 dark:hover:text-accent-400 transition-colors line-clamp-2">
          {post.title}
        </h4>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
          {new Date(post.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
          })}
        </p>
      </a>
    </li>
  ))}
</ul>